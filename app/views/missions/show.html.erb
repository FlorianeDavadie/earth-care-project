<h1><%= @mission.title %></h1>
<h1><%= @mission.photo_url %></h1>


<p>Your mission will be<%= @mission.description %></p>

<p>Your mission will start  : <%= @mission.start_date %></p>
<p>Your mission will end : <%= @mission.end_date %></p>
<p>It's Located in : <%= @mission.location %></p>
<p>You will receive: <%= @mission.reward %> points</p>


<p><% if current_user != @mission.user  %>

    <%= simple_form_for [@mission, @booking] do |f| %>
    <p> Feel Free To accept your mission !</p>
     <%# <%= f.check_box :accept, required: true %>
     <%= f.submit "Accept" %>

      <%= f.label :accept do %>
        <span class= "btn btn-success">
           <%= link_to 'Accept',  new_mission_booking_path(@mission) %>
           <%# ajouter une confirmation %>
        </span>

      <% end %>

    <% end %>

    <%= simple_form_for [@mission, @declined_booking] do |f| %>
    <p> Feel Free To accept your mission !</p>
     <%# <%= f.check_box :accept, required: true %>
     <%= f.submit "Decline" %>


    <% end %>

<% end %>


  <p><% if current_user == @mission.user  %>

    <%= link_to "Edit you posted mission", edit_mission_path(@mission.id),class: "btn"  %>
    <%= link_to "Delete your mission", mission_path(@mission), method: :delete, data: { confirm: "Are you sure?" } %>
    <%# <%= link_to "Dashboard", profil_path, data: {turbo_method: :get}, class: "btn" %>
  <% end %>
