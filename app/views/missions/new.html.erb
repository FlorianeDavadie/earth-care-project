<div class="container">
  <%= simple_form_for(@mission) do |f| %>
    <div class="form-inputs">

      <%= f.input :title,
            required: true,
            autofocus: true,
            input_html: { autocomplete: "title" } %>
      <%= f.file_field :photo_url,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "your pic" } %>
      <%= f.input :description,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "description" } %>

        <%= f.date_field :start_date %>
        <%= f.date_field :end_date %>

          <div class="form-actions text-center">
            <%= f.submit "Create mission ", class: "btn btn-primary" %>
            <%= link_to "back to home", missions_path %>
          </div>


  <% end %>
</div>

